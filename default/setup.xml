<setup>
    <block title="Set a password for authorizing a specific user to decrypt a specific private key file." endpoint="storage/passwords" entity="_new">
            <input field="realm">
                    <label>Path to the key file:</label>
                    <type>text</type>
            </input>
            
            <input field="name">
                    <label>User to authorize:</label>
                    <type>text</type>
            </input>
            
            <input field="password">
                    <label>Password for decrypting the key file:</label>
                    <type>password</type>
            </input>
    </block>
</setup>
