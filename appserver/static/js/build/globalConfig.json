{
    "meta": {
        "name": "TA-cryptosuite",
        "displayName": "Crypto and Encoding Add-On",
        "version": "2.3.3",
        "restRoot": "TA_cryptosuite",
        "schemaVersion": "0.0.3"
    },
    "pages": {
        "configuration": {
            "title": "Configuration",
            "description": "Set up your add-on",
            "tabs": [
                {
                    "name": "logging",
                    "title": "Logging",
                    "entity": [
                        {
                            "field": "loglevel",
                            "label": "Log level",
                            "type": "singleSelect",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG",
                                        "value": "DEBUG"
                                    },
                                    {
                                        "label": "INFO",
                                        "value": "INFO"
                                    },
                                    {
                                        "label": "WARNING",
                                        "value": "WARNING"
                                    },
                                    {
                                        "label": "ERROR",
                                        "value": "ERROR"
                                    },
                                    {
                                        "label": "CRITICAL",
                                        "value": "CRITICAL"
                                    }
                                ]
                            },
                            "defaultValue": "INFO"
                        }
                    ]
                },
                {
                    "name": "additional_parameters",
                    "title": "Add-on Settings",
                    "entity": [
                        {
                            "field": "site_packages",
                            "label": "Python site-packages location",
                            "type": "text",
                            "help": "This parameter is optional and only required if usage of encrypted private RSA keys needs to be supported. If specified, the crypt command will attempt to import the \"pycryptodomex\" package from here.",
                            "required": false,
                            "defaultValue": "",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ],
                            "options": {
                                "placeholder": "/absolute_path_to_local_python_installation/site-packages"
                            }
                        }
                    ]
                }
            ]
        },
        "inputs": {
            "title": "Key and Salt Management",
            "description": "Manage your keys and salts",
            "table": {
                "header": [
                    {
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "type_of_data",
                        "label": "Type"
                    },
                    {
                        "field": "authorized_roles",
                        "label": "Authorized roles"
                    },
                    {
                        "field": "authorized_users",
                        "label": "Authorized users"
                    }
                ],
                "moreInfo": [
                    {
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "type_of_data",
                        "label": "Type of Data"
                    },
                    {
                        "field": "key_salt",
                        "label": "Key / Salt"
                    },
                    {
                        "field": "rsa_key_encryption_password",
                        "label": "RSA key encryption password"
                    },
                    {
                        "field": "authorized_roles",
                        "label": "Authorized Roles"
                    },
                    {
                        "field": "authorized_users",
                        "label": "Authorized Users"
                    }
                ],
                "actions": [
                    "edit",
                    "delete"
                ]
            },
            "services": [
                {
                    "name": "crypto_settings",
                    "title": "crypto_settings",
                    "entity": [
                        {
                            "field": "name",
                            "label": "Name",
                            "type": "text",
                            "help": "Enter a unique name for the data input",
                            "required": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 3,
                                    "maxLength": 100,
                                    "errorMsg": "Length of key/salt name should be between 3 and 100."
                                }
                            ],
                            "options": {
                                "placeholder": "my_rsa_key.pem"
                            }
                        },
                        {
                            "field": "type_of_data",
                            "label": "Type of Data",
                            "help": "Select if you are creating a new key file for encryption/decryption or a new salt file for hashing.",
                            "required": true,
                            "type": "radio",
                            "defaultValue": "key",
                            "options": {
                                "items": [
                                    {
                                        "value": "key",
                                        "label": "New key"
                                    },
                                    {
                                        "value": "salt",
                                        "label": "New salt"
                                    }
                                ]
                            }
                        },
                        {
                            "field": "key_salt",
                            "label": "Key / Salt",
                            "help": "Paste your key or salt here.",
                            "required": true,
                            "type": "text",
                            "encrypted": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of key field is 8192"
                                }
                            ],
                            "options": {
                                "placeholder": "********"
                            }
                        },
                        {
                            "field": "rsa_key_encryption_password",
                            "label": "RSA key encryption password",
                            "help": "Optional: If you are uploading an AES-256-CBC, DES-CBC or DES-EDE3-CBC encrypted private RSA key file, specify the corresponding password here. Leave blank otherwise.",
                            "required": false,
                            "type": "text",
                            "encrypted": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of password is 8192"
                                }
                            ],
                            "options": {
                                "placeholder": "********"
                            }
                        },
                        {
                            "field": "authorized_roles",
                            "label": "Authorized Roles",
                            "help": "Specify which roles should be authorized to use this key/salt file.",
                            "required": false,
                            "type": "multipleSelect",
                            "options": {
                                "delimiter": "~",
                                "endpointUrl": "authorization/roles",
                                "createSearchChoice": true
                            }
                        },
                        {
                            "field": "authorized_users",
                            "label": "Authorized Users",
                            "help": "Specify which users should be authorized to use this key/salt file.",
                            "required": false,
                            "type": "multipleSelect",
                            "options": {
                                "delimiter": "~",
                                "endpointUrl": "authentication/users",
                                "createSearchChoice": true
                            }
                        }
                    ]
                }
            ]
        }
    }
}
